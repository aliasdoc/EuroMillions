{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Draw list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number1</th>
                <th>Number2</th>
                <th>Number3</th>
                <th>Number4</th>
                <th>Number5</th>
                <th>Star1</th>
                <th>Star2</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('aa_draw_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.number1 }}</td>
                <td>{{ entity.number2 }}</td>
                <td>{{ entity.number3 }}</td>
                <td>{{ entity.number4 }}</td>
                <td>{{ entity.number5 }}</td>
                <td>{{ entity.star1 }}</td>
                <td>{{ entity.star2 }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('aa_draw_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('aa_draw_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('aa_draw_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
